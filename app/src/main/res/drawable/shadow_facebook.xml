<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:left="2dp" android:top="2dp">
                <shape>
                    <solid android:color="@color/colorFacebookPressed" />
                    <corners android:radius="4dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item android:left="0dp" android:top="0dp" android:bottom="0dp">
                <shape>
                    <solid android:color="@color/colorFacebookPressed" />
                    <corners android:radius="4dp"/>
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item android:bottom="2dp" android:right="0dp">
                <shape>
                    <solid android:color="@color/colorFacebook" />
                    <corners android:radius="4dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>