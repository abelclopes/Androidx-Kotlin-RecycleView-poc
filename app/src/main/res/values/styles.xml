<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorGray500</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorError">@color/colorRed300</item>

    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>
    <style name="styleHighlightText">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/colorGray100</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="styleTitleText">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorGray100</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="styleBigTitleText">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorGray100</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="styleParagraphText">
        <item name="android:fontFamily">@font/rubik_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorGray100</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="styleDescriptionText">
        <item name="android:fontFamily">@font/rubik_light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorGray300</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="styleLinkText">
        <item name="android:fontFamily">@font/rubik_light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorYellow300</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="styleLinkButtonText" parent="android:Widget.Material.Light.Button.Borderless">
        <item name="android:fontFamily">@font/rubik_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorYellow300</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="styleButton" parent="android:Widget.Material.Light.Button">
        <item name="android:fontFamily">@font/rubik_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="styleSubtitleText">
        <item name="android:fontFamily">@font/rubik_light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorGray200</item>
        <item name="android:textAllCaps">true</item>
    </style>


</resources>
